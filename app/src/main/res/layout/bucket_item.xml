<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.android.itrip.util.Converter" />

        <variable
            name="actividadARealizar"
            type="com.android.itrip.models.ActividadARealizar" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bucketmessage_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{Converter.fromBucketPositionToTimeOfTheDay(position)}"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bucket_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@{actividadARealizar.detalle_actividad.nombre??"Vacio"}'
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/bucketmessage_textview" />


        <ImageButton
            android:id="@+id/bucket_activitydetails_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhiteSmoke"
            app:layout_constraintEnd_toStartOf="@+id/bucket_removeactivity_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bucket_textview"
            app:srcCompat="@drawable/ic_info_black_24dp" />


        <ImageButton
            android:id="@+id/bucket_removeactivity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhiteSmoke"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bucket_activitydetails_button"
            app:layout_constraintTop_toBottomOf="@+id/bucket_textview"
            app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
