<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/activity_img">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_star_black_24dp"
            app:layout_constraintEnd_toStartOf="@+id/travel_date"
            app:layout_constraintTop_toBottomOf="@+id/activity_img" />

        <TextView
            android:id="@+id/activityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Activity"
            android:textColor="#000"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/activity_img" />
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="#AAA"
        app:layout_constraintBaseline_toBaselineOf="parent" />


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_date_range_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/activityDate"
        app:layout_constraintTop_toBottomOf="@+id/titleContainer" />

    <TextView
        android:id="@+id/activityDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="dd/mm/aaaa"
        android:textColor="@color/colorPlaceholder"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/titleContainer"

        />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_pin_drop_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/activity_location"
        app:layout_constraintTop_toBottomOf="@+id/activityDate" />

    <TextView
        android:id="@+id/activity_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="Lugar"
        android:textColor="@color/colorPlaceholder"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/activityDate" />

    <TextView
        android:id="@+id/activity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Destiny Description"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/activity_location" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/modify_button"
        style="@style/default_itrip_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="60dp"
        android:drawableEnd="@drawable/ic_add_black_24dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:text="@string/add_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_description" />


</androidx.constraintlayout.widget.ConstraintLayout>