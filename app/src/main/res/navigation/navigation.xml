<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.android.itrip.fragments.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_createTravelFragment"
            app:destination="@id/createTravelFragment" />
        <action
            android:id="@+id/action_homeFragment_to_tripFragment"
            app:destination="@id/tripFragment" />
    </fragment>
    <fragment
        android:id="@+id/createTravelFragment"
        android:name="com.android.itrip.fragments.CreateTravelFragment"
        tools:layout="@layout/fragment_create_travel">
        <action
            android:id="@+id/action_createTravelFragment_to_tripFragment"
            app:destination="@id/tripFragment"
            app:popUpTo="@+id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/destinationListFragment"
        android:name="com.android.itrip.fragments.DestinationListFragment"
        tools:layout="@layout/fragment_destination_list">
        <action
            android:id="@+id/action_destinationListFragment_to_activitiesListFragment"
            app:destination="@id/activitiesListFragment" />
        <action
            android:id="@+id/action_destinationListFragment_to_tripFragment"
            app:destination="@id/tripFragment"
            app:popUpTo="@+id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/activitiesListFragment"
        android:name="com.android.itrip.fragments.ActivitiesListFragment"
        android:label="fragment_activities_list"
        tools:layout="@layout/fragment_activities_list">
        <action
            android:id="@+id/action_activitiesListFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_activitiesListFragment_to_activityDetailsFragment"
            app:destination="@id/activityDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.android.itrip.fragments.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />


    <fragment
        android:id="@+id/activityDetailsFragment"
        android:name="com.android.itrip.fragments.ActivityDetailsFragment"
        android:label="ActivityDetailsFragment"
        tools:layout="@layout/fragment_activity_details">
        <action
            android:id="@+id/action_activityDetailsFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.android.itrip.fragments.ScheduleFragment"
        android:label="ScheduleFragment"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/action_scheduleFragment_to_activitiesListFragment"
            app:destination="@id/activitiesListFragment" />
        <action
            android:id="@+id/action_scheduleFragment_to_activityDetailsFragment"
            app:destination="@id/activityDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/tripFragment"
        android:name="com.android.itrip.fragments.TripFragment"
        tools:layout="@layout/fragment_trip">
        <action
            android:id="@+id/action_tripFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
        <action
            android:id="@+id/action_tripFragment_to_destinationListFragment"
            app:destination="@id/destinationListFragment" />
    </fragment>
</navigation>